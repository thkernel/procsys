<%= form_with(model: order, local: false) do |form| %>
<div class="modal-body">
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Réf." %>
    <%= form.text_field :ref, id: :order_ref, class: "form-control", placeholder: "Réf." %>
  </div>

  <div class="form-group">
    <%= form.label "Date d'arrivée" %>
    <%= form.date_field :arrival_date, id: :order_arrival_date, class: "form-control" %>
  </div>

  

  <div class="form-group">
    <%= form.label "Type commande" %>
    <%= form.collection_select(:order_type_id, @order_types,  :id, :name , {prompt: "Sélectionner un type de commande"}, class: "form-control", required: true) %>
                
  </div>



  

  <div class="form-group">
    <%= form.label "Client" %>
    <%= form.collection_select(:customer_id, @customers,  :id, :full_name , {prompt: "Sélectionner un client"}, class: "form-control", required: true) %>
                
  </div>
  <div class="form-group">
    <%= form.label "Statut" %>
    <%= form.collection_select(:order_status_id, @order_statuses,  :id, :name , {prompt: "Sélectionner un statut"}, class: "form-control", required: true) %>
                
  </div>

  </div>

  <div class="modal-footer">
				<%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
				<%= form.submit "Enregistrer", class: "btn btn-primary",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
		</div>
<% end %>
