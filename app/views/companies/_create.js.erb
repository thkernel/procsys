$("ul.errors").html("");
<% if @company.errors.any? %>
  <% @company.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".companies").html("<%= escape_javascript(render 'index') %>");
  $("#company-modal").modal("hide");
 
<% end %>