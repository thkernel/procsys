<p id="notice"><%= notice %></p>

<h1>Unavailabilities</h1>

<table>
  <thead>
    <tr>
      <th>Actor</th>
      <th>Unavailability date</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unavailabilities.each do |unavailability| %>
      <tr>
        <td><%= unavailability.actor %></td>
        <td><%= unavailability.unavailability_date %></td>
        <td><%= unavailability.description %></td>
        <td><%= unavailability.user %></td>
        <td><%= link_to 'Show', unavailability %></td>
        <td><%= link_to 'Edit', edit_unavailability_path(unavailability) %></td>
        <td><%= link_to 'Destroy', unavailability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

