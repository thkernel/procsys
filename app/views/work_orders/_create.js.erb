$("ul.errors").html("");
<% if @work_order.errors.any? %>
  <% @work_order.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".work-orders-index").html("<%= escape_javascript(render 'index') %>");
  $("#work-order-modal").modal("hide");
 
<% end %>