<%= form_with(model: station, local: false) do |form| %>
    <div class="modal-body">
      <ul class="errors">

          <% @station.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
        </ul>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                  <%= form.label "Réf" %>
                  <%= form.text_field :ref, id: :station_full_name, class: "form-control", placeholder: "Réf" , required: true %>
                </div>

               

                <div class="form-group">
                  <%= form.label "Adresse" %>
                  <%= form.text_field :address, id: :station_address, class: "form-control", placeholder: "Adresse" %>
                </div>

                <div class="form-group">
                  <%= form.label "Ville" %>
                  <%= form.text_field :city, id: :station_city, class: "form-control", placeholder: "Ville" %>
                </div>

               

                <div class="form-group">
                  <%= form.label "Téléphone" %>
                  <%= form.text_field :phone, id: :station_phone, class: "form-control", placeholder: "Téléphone" %>
                </div>
            </div><!-- end col -->
        </div><!-- end row -->
        <div class="modal-footer">
              <%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
              <%= form.submit "Enregistrer", class: "btn btn-primary",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
        </div>
<% end %>

    
