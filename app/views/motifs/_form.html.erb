<%= form_with(model: motif, local: false) do |form| %>
<div class="modal-body">

  <% if motif.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(motif.errors.count, "error") %> prohibited this motif from being saved:</h2>

      <ul>
      <% motif.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :motif_name, class: "form-control", placeholder: "Nom", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :motif_description, class: "form-control", placeholder: "Description" %>
  </div>
</div>

  
  <div class="modal-footer">
				<%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
				<%= form.submit "Enregistrer", class: "btn btn-primary",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
		</div>
<% end %>
