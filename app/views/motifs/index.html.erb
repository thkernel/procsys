<p id="notice"><%= notice %></p>

<h1>Motifs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motifs.each do |motif| %>
      <tr>
        <td><%= motif.name %></td>
        <td><%= motif.description %></td>
        <td><%= motif.status %></td>
        <td><%= motif.user %></td>
        <td><%= link_to 'Show', motif %></td>
        <td><%= link_to 'Edit', edit_motif_path(motif) %></td>
        <td><%= link_to 'Destroy', motif, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Motif', new_motif_path %>
