$("ul.errors").html("");
<% if @motif.errors.any? %>
  <% @motif.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".motifs-index").html("<%= escape_javascript(render 'index') %>");
  $("#motif-modal").modal("hide");
 
<% end %>