$("ul.errors").html("");
<% if @provider.errors.any? %>
  <% @provider.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".providers-index").html("<%= escape_javascript(render 'index') %>");
  $("#provider-modal").modal("hide");
 
<% end %>