<%= form_with(model: user, url: create_user_path, local: false) do |f| %>
		<div class="modal-body pd-25">
				<div class="row">
							<div class="col-md-12">
								 <ul class="errors">

          							<% user.errors.full_messages.each do |message| %>
                        				<li><%= message %></li>
                      				<% end %>
        						</ul>

								<div class="col-md-12">
									<div class="form-group">
										
										<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "Prénom", required: true   %>
									</div>
								</div>
								<div class="col-md-12">
									<div class="form-group">
										
										<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "Nom", required: true   %>
									</div>
								</div>

<div class="col-md-12">
									<div class="form-group">
										
										<%= f.text_field :service_id, autofocus: true, autocomplete: "service_id", class: "form-control", placeholder: "Service", required: true   %>
									</div>
								</div>
								

								<div class="col-md-12">

									<div class="form-group">
										
										<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail", required: true %>
									</div>
									

									<div class="form-group">
										
										<% if @minimum_password_length %>
										<em>(<%= @minimum_password_length %> characters minimum)</em>
										<% end %><br />
										<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe", required: true %>
									</div>
								
									<div class="form-group">
										
										<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe", required: true %>
									</div>
									<div class="form-group">
										
										<%= f.collection_select(:role, @roles,  :name, :name , {prompt: "Sélectionner un profil"}, class: "form-control", required: true) %>
																
									</div>
									
								</div>
						</div>
				</div>
		</div><!-- modal body -->
		<div class="modal-footer">          
    <button type="button" class="btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1">FERMER</button>
      <%= f.submit "ENREGISTRER", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1"%>
  </div>
<% end %>
