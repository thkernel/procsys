$("ul.errors").html("");
<% if @order_type.errors.any? %>
  <% @order_type.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".order-types-index").html("<%= escape_javascript(render 'index') %>");
  $("#order-type-modal").modal("hide");
 
<% end %>