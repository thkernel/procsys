$("ul.errors").html("");
<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".tasks-index").html("<%= escape_javascript(render 'index') %>");
  $("#task-modal").modal("hide");
 
<% end %>